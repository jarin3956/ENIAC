


<section class="rounded-3" style="background-color: #eee;">
    <div class="text-center container py-5">
        <div class="row">
            <div class="col-12">
                <div class="card card-default">
                    <div class="card-header card-header-border-bottom d-flex justify-content-between">
                        <h2>Reports</h2>

                        <div class="d-flex justify-content-end mb-3">
                            <button class="btn the-userbutton" id="download"> Download Reports</button>
                        </div>
                    </div>

                    <div class="card-body" id="invoice">
                        <div class="basic-data-table">
                            <div class="form-group row">
                                <label for="fromDate" class="col-sm-2 col-form-label">From Date:</label>
                                <div class="col-sm-4">
                                    <input type="date" class="form-control" id="fromDate">
                                </div>
                                <label for="toDate" class="col-sm-2 col-form-label">To Date:</label>
                                <div class="col-sm-4">
                                    <input type="date" class="form-control" id="toDate">
                                </div>
                            </div>

                            <table id="basic-data-table" class="table nowrap" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Order Id</th>
                                        <th>Delivered Date</th>
                                        <th>Order Price</th>
                                    </tr>
                                </thead>


                                <tbody>
                                    {{#each orderdata}}
                                    <tr>
                                        <td>{{this.orderId}}</td>
                                        <td>{{this.delivery_date}}</td>
                                        <td>₹{{this.orderPrice}}</td>
                                    </tr>



                                    {{/each}}
                                </tbody>
                            </table>
                            <div class="d-flex justify-content-center p-3">
                                <h4 class="eniac-text"><i class="fa-solid fa-truck"></i> TotalSales :₹{{totalSales}}
                                </h4>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <h3 class="eniac-text">eniac Ecommerce</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





<script>
    window.onload = function () {
        document.getElementById("download")
            .addEventListener("click", () => {
                const invoice = this.document.getElementById("invoice");
                console.log(invoice);
                console.log(window);
                var opt = {
                    margin: 1,
                    filename: 'myfile.pdf',
                    image: { type: 'jpeg', quality: 0.98 },
                    html2canvas: { scale: 2 },
                    jsPDF: { unit: 'in', format: 'letter', orientation: 'portrait' }
                };
                html2pdf().from(invoice).set(opt).save();
            })
    }
</script>

<script>
$(document).ready(function() {
    var table = $('#basic-data-table').DataTable();

    // Add event listener for the date range inputs
    $('#fromDate, #toDate').on('change', function() {
        var fromDate = $('#fromDate').val();
        var toDate = $('#toDate').val();
        console.log('fromDate:', fromDate);
        console.log('toDate:', toDate);

        var searchValue = fromDate + '|' + toDate;
        console.log('searchValue:', searchValue);

        var columnIdx = 1; // Update this to the correct index of the delivered date column
        table.columns(columnIdx).search(searchValue, true, false).draw();
    });
});

</script>




