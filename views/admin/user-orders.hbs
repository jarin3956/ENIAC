<div class="container-fluid">
    <div class="sub-container thehome">
        <div class="p-3">
            <h1 class="thenewarrival">Order Management</h1>
            <br>
            <div class="theArea">
                
                <div class="card">
                    <h5 class="card-header">Orders</h5>
                    <div class="table-responsive text-nowrap">
                        <table class="table" id="">
                            <thead>
                                <tr>
                                    <th scope="col">Order id</th>
                                    <th scope="col">Products</th>
                                    <th scope="col">Payment Method</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Order Price</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody class="table-border-bottom-0">
                                {{#each orderData}}
                                <tr>
                                    <td>{{this.orderId}}</td>
                                    <td> <a href="/admin/viewproducts?id={{this._id}}" class="btn btn-success">View
                                            Products</a> 
                                    </td>
                                    <td>
                                        {{#ifeq this.payment_method 1}}
                                        <h5 class="text-success">COD</h5>
                                        {{/ifeq}}

                                        {{#ifeq this.payment_method 2}}
                                        <h5 class="text-success">RAZORPAY</h5>
                                        {{/ifeq}}
                                    </td>
                                    <td>
                                        {{#ifeq this.status "Processing"}}
                                        <h5 class="text-muted">Processing</h5>
                                        {{/ifeq}}
                                        {{#ifeq this.status "Shipped"}}
                                        <h5 class="text-warning">Shipped</h5>
                                        {{/ifeq}}
                                        {{#ifeq this.status "Out for Delivery"}}
                                        <h5 class="text-info">Out for Delivery</h5>
                                        {{/ifeq}}
                                        {{#ifeq this.status "Delivered"}}
                                        <h5 class="text-success">Delivered</h5>
                                        {{/ifeq}}
                                        {{#ifeq this.status "Cancelled"}}
                                        <h5 class="text-danger">Cancelled</h5>
                                        {{/ifeq}}
                                        {{#ifeq this.status "Returned"}}
                                        <h5 class="text-primary">Returned</h5>
                                        {{/ifeq}}
                                    </td>
                                    <td>â‚¹{{this.orderPrice}}</td>
                                    
                                    <td>

                                        {{#ifeq this.status "Processing"}}
                                        <a href="/admin/changestatus?id={{this._id}}" class="btn btn-warning ">Ship
                                            Order</a>
                                        {{/ifeq}}
                                        {{#ifeq this.status "Shipped"}}
                                        <a href="/admin/changestatus?id={{this._id}}" class="btn btn-primary">Out for
                                            Delivery</a>
                                        {{/ifeq}}
                                        {{#ifeq this.status "Out for Delivery"}}
                                        <a href="/admin/changestatus?id={{this._id}}" class="btn btn-primary">Deliver
                                            Order</a>
                                        {{/ifeq}}
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#list_orders').DataTable();
    });
</script>