<section class="rounded-3" style="background-color: #d1cbcb;">
    <div class="text-center container py-5">
        <div class="row">
            <div class="col-12">
                <div class="card card-default">
                    <div class="admin-dashhd text-center">
                        <h2 class="text-center admin-dasheadn  p-3" >Cancel/Returns</h2>
                    </div>

                    <div class="card-body">
                        <div class="basic-data-table">
                            <table id="basic-data-table" class="table nowrap" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Order id</th>
                                        <th>Products</th>
                                        <th>Payment Method</th>
                                        <th>Status</th>
                                        <th>Order Price</th>
                                        <th>Offer Price</th>
                                        
                                    </tr>
                                </thead>


                                <tbody>
                                    {{#each orderData}}
                                    <tr>
                                        <td>{{this.orderId}}</td>
                                        <td> <a href="/admin/viewproducts?id={{this._id}}" class="btn btn-success">View
                                                Products</a>
                                        </td>
                                        <td>
                                            {{#ifeq this.payment_method 1}}
                                            <h5 class="text-success">COD</h5>
                                            {{/ifeq}}

                                            {{#ifeq this.payment_method 2}}
                                            <h5 class="text-success">RAZORPAY</h5>
                                            {{/ifeq}}
                                        </td>
                                        <td>
                                            {{#ifeq this.status "Cancelled"}}
                                            <h5 class="text-danger">Cancelled</h5>
                                            {{/ifeq}}
                                            {{#ifeq this.status "Returned"}}
                                            <h5 class="text-primary">Returned</h5>
                                            {{/ifeq}}
                                        </td>
                                        <td>₹{{productPrice}}</td>
                                        <td>₹{{this.orderPrice}}</td>
                                        
                                        
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





<script>
    $(document).ready(function () {
        $('#basic-data-table').DataTable();
    });
</script>