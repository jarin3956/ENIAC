<script>
     var ctx = document.getElementById("myChart").getContext("2d");
    var myChart = new Chart(ctx, {
        type: "line",
        data: {
            labels: [{{#each months}}"{{@key}}",{{/each}}],
    datasets: [{
        label: "Orders",
        data: [{{#each months}}{{this}}, {{/each}}],
        backgroundColor:'transparent',
            borderColor: '#000000',
                borderWidth: 2
    },]
  },
    options: {
        animation: {
            duration: 2000,
                easing: "easeInOutQuad"
        },
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
}); 

</script>

<script>

    var ctx = document.getElementById('paymentMethodChart').getContext('2d');
    var paymentMethodData = JSON.parse('{{paymentMethodData}}');
    var paymentMethodChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: paymentMethodData.map(item => item.label),
            datasets: [{
                label: 'Payment Method',
                data: paymentMethodData.map(item => item.value),
                backgroundColor: [
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 99, 132, 0.2)'
                ],
                borderColor: [
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 99, 132, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            animation: {
                duration: 2000,
                easing: "easeInOutQuad"
            },
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });


</script>