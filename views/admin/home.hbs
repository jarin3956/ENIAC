

<section class="rounded-3" style="background-color: #eee;">
    <div class="text-center container py-5">
        <div class="row">
            <div class="col-12">
                <div class="card card-default">
                    <div class="card-header card-header-border-bottom d-flex justify-content-between">
                        <h2>Admin Dasboard</h2>
                    </div>
                    <div class="theArea">
                <div class="p-3">
                    <h4 class="eniac-text" ><i class="fa-solid fa-users"></i>   Total Users : {{users}}</h4>
                    <h4 class="eniac-text" ><i class="fa-solid fa-boxes-packing"></i>  Total Orders : {{orderCount}}</h4>
                    <h4 class="eniac-text" ><i class="fa-solid fa-laptop"></i>  Total Products : {{productCount}}</h4>
                    <h4 class="eniac-text" ><i class="fa-solid fa-tags"></i>  Total Coupons : {{couponCount}}</h4>
                </div>
            </div>
            <br>
            <div class="theArea">
                <div class="p-3">
                    <canvas id="myChart"></canvas>
                </div>
            </div>
            
            <div class="theArea">
                <div class="p-3">
                    <canvas id="paymentMethodChart"></canvas>
                </div>
            </div>
                    
                </div>
            </div>
        </div>
    </div>
</section>





