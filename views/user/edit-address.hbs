



<section  style="background-color: #d1cbcb;">
    <div class=" p-5 container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1  mb-5 mx-1 mx-md-4 mt-4">Edit Address</p>

                                <form class="mx-1 mx-md-4" method="post" action="" >
                                    <span class="text-danger">{{message}}</span>
                                    <input type="hidden" value="{{address._id}}" name="id">
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        
                                        <div class="form-outline flex-fill mb-0">
                                            <input class="form-control" type="text" name="name" value="{{address.name}}"
                                                pattern="^[A-Za-z]+(([,.] |[ '-])[A-Za-z]+)*([.,'-]?)$" required>
                                            <label class="form-label" for="form3Example1c">Your Name</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        
                                        <div class="form-outline flex-fill mb-0">
                                            <input class="form-control" type="text" name="number" value="{{address.number}}"
                                                 required>
                                            <label class="form-label" for="form3Example3c">Your Mobile</label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        
                                        <div class="form-outline flex-fill mb-0">
                                            <input class="form-control" type="text" name="house" value="{{address.house}}"
                                                 required>
                                            <label class="form-label" for="form3Example4c">Address</label>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        
                                        <div class="form-outline flex-fill mb-0">
                                            <input class="form-control" type="text" name="city" value="{{address.city}}"
                                                required>

                                            <label class="form-label" for="form3Example4c">City</label>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        
                                        <div class="form-outline flex-fill mb-0">
                                            <input class="form-control" type="text" name="state"  value="{{address.state}}"
                                                 required>
                                            <label class="form-label" for="form3Example4c">State</label>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        
                                        <div class="form-outline flex-fill mb-0">
                                            <input class="form-control" type="text" name="country" value="{{address.country}}"
                                                 required>
                                            <label class="form-label" for="form3Example4c">Country</label>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        
                                        <div class="form-outline flex-fill mb-0">
                                            <input class="form-control" type="text" name="pincode" value="{{address.pincode}}"
                                                 required>
                                            <label class="form-label" for="form3Example4c">Pincode</label>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="small mb-1">HOME / OFFICE</label>
                                            <select class="mb-3" name="deliver_to" >
                                                {{#ifeq address.deliver_to "HOME" }}
                                                <option>HOME</option>
                                                <option>OFFICE</option>
                                                {{/ifeq}}
                                                {{#ifeq address.deliver_to "OFFICE" }}
                                                <option>OFFICE</option>
                                                <option>HOME</option>
                                                {{/ifeq}}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <input type="submit" value="Update address" class=" btn the-userbutton mt-2">
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                    class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>