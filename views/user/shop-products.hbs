<section style="background-color: #eee;">
    <div class=" p-5 container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div>
                            <div>
                                <p class="text-center h1  mb-5 mx-1 mx-md-4 mt-4">Shop</p>
                                <div class="row">
                                    {{#each products}}
                                    <div class=" col-lg-4 col-md-12 mb-4">
                                        <div class="card ">
                                            <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
                                                data-mdb-ripple-color="light">

                                                <a href="/productview?id={{this._id}}"> <img
                                                        src="/productImages/{{this.image.[0]}}" class="w-100" alt="..."
                                                        width="200px" height="210px"></a>
                                                <div class="hover-overlay">
                                                    <div class="mask"
                                                        style="background-color: rgba(251, 251, 251, 0.15);">
                                                    </div>
                                                </div>
                                                </a>
                                            </div>
                                            <div class="card-body">
                                                <a href="" class="text-reset text-decoration-none ">
                                                    <p>{{Product.0.name}}</p>
                                                </a>
                                                <a href="" class="text-reset text-decoration-none ">
                                                    <h6 class="card-title mb-3 ">{{this.name}}</h6>
                                                </a>
                                                <span class="text-danger act-price text-decoration-line-through">
                                                    ₹{{this.fake_price}}/-
                                                </span>
                                                <h6 class="mb-3">₹{{this.price}}</h6>
                                            </div>
                                            <div class="card-body">
                                                <a href="/addtowishlist?id={{this._id}}" class="btn the-userdbutton">Add to Wishlist</a>
                                                {{#if this.stock}}
                                                <a class="btn the-userbutton" href="/addtocart?id={{this._id}}">Add to
                                                    Cart</a>
                                                {{else}}
                                                <a class="text-decoration-none text-danger " href=""><strong>Out of
                                                        stock</strong></a>
                                                {{/if}}

                                            </div>
                                        </div>
                                    </div>
                                    {{/each}}
                                </div>
                                <div class="pt-5">
                                    <h6 class="mb-0"><a href="home" class="text-body text-decoration-none"><i
                                                class="fas fa-long-arrow-alt-left me-2"></i>Back</a></h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>