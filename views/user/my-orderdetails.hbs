



<section style="background-color: #d1cbcb;">
    <div class=" p-5 container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card">
                        <div class="card-body">
                            <div class="container mb-5 mt-3">
                                <div class="row d-flex align-items-baseline">
                                    <div class="col-xl-9">
                                        <p class="text-center h1  mb-5 mx-1 mx-md-4 mt-4">Order Details</p>
                                    </div>
                                    <div class="col-xl-3 ">
                                        <button class="download-button" id="download">
                                            <div class="docs"><svg class="css-i6dzq1" stroke-linejoin="round"
                                                    stroke-linecap="round" fill="none" stroke-width="2"
                                                    stroke="currentColor" height="20" width="20" viewBox="0 0 24 24">
                                                    <path
                                                        d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z">
                                                    </path>
                                                    <polyline points="14 2 14 8 20 8"></polyline>
                                                    <line y2="13" x2="8" y1="13" x1="16"></line>
                                                    <line y2="17" x2="8" y1="17" x1="16"></line>
                                                    <polyline points="10 9 9 9 8 9"></polyline>
                                                </svg>Invoice</div>
                                            <div class="download">
                                                <svg class="css-i6dzq1" stroke-linejoin="round" stroke-linecap="round"
                                                    fill="none" stroke-width="2" stroke="currentColor" height="24"
                                                    width="24" viewBox="0 0 24 24">
                                                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                                    <polyline points="7 10 12 15 17 10"></polyline>
                                                    <line y2="3" x2="12" y1="15" x1="12"></line>
                                                </svg>
                                            </div>
                                        </button>

                                    </div>
                                    <hr>
                                </div>

                                <div class="container"  id="invoice" >
                                    <div class="col-md-12">
                                        <div class="text-center">

                                            <p class="pt-0">eniacecommerce.online</p>
                                        </div>

                                    </div>

                                    {{#each myorders}}
                                    <div class="row">
                                        <div class="col-xl-8">
                                            <ul class="list-unstyled">
                                                <li class="text-muted">To:</li>
                                                <li class="text-muted">{{addressId}}</li>

                                            </ul>
                                        </div>
                                        <div class="col-xl-4">

                                            <ul class="list-unstyled">
                                                <li class="text-muted"><i class="fas fa-circle"
                                                        style="color: rgb(105, 12, 162) ;"></i> <span
                                                        class="fw-bold">ID:</span>{{orderId}}</li>
                                                <li class="text-muted"><i class="fas fa-circle"
                                                        style="color: rgb(105, 12, 162) ;"></i> <span class="fw-bold">Ordered date
                                                        : </span>{{../oDate}}</li>
                                                {{#ifeq this.status "Delivered"}}
                                                <li class="text-muted"><i class="fas fa-circle"
                                                        style="color: rgb(105, 12, 162) ;"></i> <span class="fw-bold">Delivered date
                                                        : </span>{{../deliDate}}</li>
                                                {{/ifeq}}

                                                <li class="text-muted"><i class="fas fa-circle"
                                                        style="color: rgb(105, 12, 162) ;"></i> <span
                                                        class="me-1 fw-bold">Status:</span><span
                                                        class="badge bg-dark text-black fw-bold">
                                                        {{status}}</span></li>
                                            </ul>
                                        </div>
                                    </div>
                                    {{#each product}}
                                    <div class="row my-2 mx-1 justify-content-center">
                                        <table class="table table-striped table-borderless">
                                            <thead style="background-color: rgb(105, 12, 162) ;" class="text-white">
                                                <tr>

                                                    <th scope="col">Name</th>
                                                    <th scope="col">Quantity</th>
                                                    <th scope="col">Price</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>

                                                    <td>
                                                        <a href="/productview?id={{id}}" class="text-decoration-none text-dark">{{name}}</a>
                                                    </td>
                                                    <td>{{quantity}}</td>
                                                    <td>₹{{price}}</td>

                                                </tr>

                                            </tbody>

                                        </table>
                                    </div>
                                    {{/each}}
                                    <div class="row">
                                        <div class="col-xl-8">
                                            <p class="ms-3">Payment details</p>

                                        </div>
                                        <div class="col-xl-3">
                                            <ul class="list-unstyled">
                                                {{#ifeq this.coupon_app "Active"}}
                                                <li class="text-muted ms-3"><span
                                                        class="text-black me-4">Coupon</span>Applied</li>
                                                {{/ifeq}}
                                                {{#ifeq this.coupon_app "Inactive"}}
                                                <li class="text-muted ms-3"><span
                                                        class="text-black me-4">Coupon</span>Not Applied</li>
                                                {{/ifeq}}
                                                <li class="text-muted ms-3 mt-2"><span
                                                        class="text-black me-4">SubTotal</span>₹{{productPrice}}</li>
                                                <li class="text-muted ms-3 mt-2"><span
                                                        class="text-black me-4">Discount</span>₹{{couponDiscount}}</li>
                                                <li class="text-muted ms-3 mt-2"><span
                                                        class="text-black me-4">Delivery</span>₹0</li>
                                            </ul>
                                            <p class="text-black float-start"><span class="text-black me-3"> Total
                                                    Amount</span><span style="font-size: 25px;">₹{{orderPrice}}</span>
                                            </p>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            {{#ifeq this.payment_method 1}}
                                            <h6> Payment mode : Cash on delivery</h6>
                                            {{/ifeq}}
                                            {{#ifeq this.payment_method 2}}
                                            <h6> Payment mode : Razorpay</h6>
                                            {{/ifeq}}
                                        </div>
                                    </div>
                                    {{/each}}
                                    <hr>
                                    <div class="row">
                                        <div class="d-flex justify-content-center">
                                            <h3 class="eniac-text">eniac ecommerce</h3>
                                        </div>

                                    </div>

                                </div>
                                <div class="d-flex  mb-3">
                                    <a href="/myorders" style="text-decoration: none; color: #6a6c6d;"><i
                                            class="fa fa-long-arrow-left"></i> <span class="ml-1">Back</span></a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>





<script>
    window.onload = function () {
        document.getElementById("download")
            .addEventListener("click", () => {
                const invoice = this.document.getElementById("invoice");
                console.log(invoice);
                console.log(window);
                var opt = {
                    margin: 1,
                    filename: 'myfile.pdf',
                    image: { type: 'jpeg', quality: 0.98 },
                    html2canvas: { scale: 2 },
                    jsPDF: { unit: 'in', format: 'letter', orientation: 'portrait' }
                };
                html2pdf().from(invoice).set(opt).save();
            })
    }
</script>