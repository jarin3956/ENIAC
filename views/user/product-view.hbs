


<div class="container mt-5 mb-5">
    <div class="card">
        {{#each products}}
        <div class="row g-0">
            <div class="col-md-6 border-end">
                <div class="d-flex flex-column justify-content-center">
                    <div class="main_image" id="main_image" >
                        <img src="/productImages/{{this.image.[0]}}" width="350" id="main_product_image" class="zoom"  />
                    </div>
                    <div class="thumbnail_images">
                        <ul id="thumbnail">
                            <li><img onclick="changeImage(this)" src="/productImages/{{this.image.[0]}}" width="70">
                            </li>
                            <li><img onclick="changeImage(this)" src="/productImages/{{this.image.[1]}}" width="70">
                            </li>
                            <li><img onclick="changeImage(this)" src="/productImages/{{this.image.[2]}}" width="70">
                            </li>
                            <li><img onclick="changeImage(this)" src="/productImages/{{this.image.[3]}}" width="70">
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="p-3 right-side">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <a href="/home" style="text-decoration: none; color: #6a6c6d;"><i class="fa fa-long-arrow-left"></i><span class="ml-1">Back</span></a>
                        </div>

                    </div>
                    <br>

                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-uppercase text-muted brand">{{Product.0.name}}</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <h3>{{this.name}}</h3>
                    </div>
                    <div class="mt-2 pr-3 content">
                        <p>{{this.description}}</p>
                    </div>
                    <h5 class="text-danger act-price text-decoration-line-through">₹{{this.fake_price}}/-
                    </h5><span>20% off</span>

                    <h3>₹{{this.price}}</h3>
                    <div class="ratings d-flex flex-row align-items-center">
                        <div class="d-flex flex-row"> <i class='bx bxs-star'></i> <i class='bx bxs-star'></i> <i
                                class='bx bxs-star'></i> <i class='bx bxs-star'></i> <i class='bx bx-star'></i> </div>

                    </div>

                    <div class="buttons d-flex flex-row mt-5 gap-3">
                        
                        <a href="/addtowishlist?id={{this._id}}" class="utton text-decoration-none"><strong>Wishlist</strong></a>
                        {{#if this.stock}}
                        <a href="/addtocart?id={{this._id}}" class="utton text-decoration-none"><strong>Add to Cart</strong></a>
                        {{else}}
                        
                        {{/if}}
                        
                    </div>
                    <div class="buttons d-flex flex-row mt-5 gap-3">
                        
                        
                        {{#if this.stock}}
                        
                        {{else}}
                        
                        <h4 class="text-danger" ><strong>Out of stock</strong></h4>
                        {{/if}}
                        
                    </div>

                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>




<script>
    function changeImage(element) {
    var main_product_image = $('#main_product_image');
    main_product_image.attr('src', element.src);
    main_product_image.attr('data-zoom-image', element.src);

    // Reload the plugin after changing the image
    $('.zoom').removeData('elevateZoom');
    $('.zoom').elevateZoom({
    zoomWindowWidth: 400,
    zoomWindowHeight: 300
});
    // Trigger the zoom event again
    $('.zoom').trigger('zoom.destroy');
    $('.zoom').zoom();
}


</script>




