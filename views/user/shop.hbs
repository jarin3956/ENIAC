




<section style="background-color: #d1cbcb;">
	<div class=" p-5 container h-100">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col-lg-12 col-xl-11">
				<div class="card text-black" style="border-radius: 25px;">
					<div class="card-body p-md-5">
						<div>
							<div>
								<p class="text-center h1  mb-5 mx-1 mx-md-4 mt-4">Shop According to Category</p>

								<div class="row">
									{{#each category}}
									<!-- Start Column 1 -->
									<div class="col-12 d-flex justify-content-center p-3">
										<a class="product-item text-decoration-none eniac-text"	href="/viewproducts?categoryid={{this._id}}">
											<h3 class="product-title">{{this.name}}</h3>
										</a>
									</div>
									<!-- End Column 1 -->
									{{/each}}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>